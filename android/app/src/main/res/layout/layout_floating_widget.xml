<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Expanded Controls Panel (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/layout_controls"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_rounded_panel"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:paddingStart="8dp"
        android:paddingEnd="20dp"
        android:layout_toStartOf="@id/btn_collapsed">

        <ImageView
            android:id="@+id/btn_stop"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_stop"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="6dp"
            android:contentDescription="Stop"/>

        <ImageView
            android:id="@+id/btn_pause"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_pause"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="6dp"
            android:contentDescription="Pause"/>

        <ImageView
            android:id="@+id/btn_resume"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_play"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:layout_marginEnd="6dp"
            android:contentDescription="Resume"/>

        <ImageView
            android:id="@+id/btn_restart"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_restart"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Restart"/>

    </LinearLayout>

    <!-- Collapsed Red Dot (Smaller) -->
    <FrameLayout
        android:id="@+id/btn_collapsed"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_circle_red">
        
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:alpha="0.9"/>
    </FrameLayout>

</RelativeLayout>

