<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">
    
    <!-- Outer Ring (White Lens) -->
    <!-- Radius 30 fits perfectly in the 66dp safe zone -->
    <path
        android:pathData="M54,24 A30,30 0 1,1 54,84 A30,30 0 1,1 54,24"
        android:strokeWidth="6"
        android:strokeColor="#FFFFFF"
        android:fillColor="#00000000"/>

    <!-- Inner Red Recording Dot with Gradient -->
    <path
        android:pathData="M54,38 A16,16 0 1,1 54,70 A16,16 0 1,1 54,38">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="54"
                android:centerY="54"
                android:gradientRadius="16"
                android:type="radial">
                <item android:offset="0.0" android:color="#FFFF5252"/> <!-- Lighter Red center -->
                <item android:offset="1.0" android:color="#FFD50000"/> <!-- Darker Red edge -->
            </gradient>
        </aapt:attr>
    </path>
    
    <!-- Lens Reflection/Glow (Subtle) -->
    <path
        android:pathData="M60,44 A3,3 0 1,1 60,50 A3,3 0 1,1 60,44"
        android:fillColor="#80FFFFFF"/>
</vector>